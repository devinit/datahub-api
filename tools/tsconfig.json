{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "removeComments": false,
        "preserveConstEnums": true,
        "outDir": "../dist",
        "sourceMap": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": false
    },
    "include": [
        "gqlToTs.*"
    ],
    "exclude": [
        "node_modules"
    ]
}
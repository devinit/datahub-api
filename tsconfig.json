{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "outDir": "dist",
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "suppressExcessPropertyErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths":{
      "*": ["node_modules", "src"],
      "utils": ["src/utils/index.ts"]
    },
    "rootDirs": [
      "src"
    ]  
  },
  "files": [
    "src/main.ts",
    "src/types/dh.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
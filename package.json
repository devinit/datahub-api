{
  "name": "datahub-api",
  "version": "0.0.1",
  "description": "Apollo GraphQL server using webpack and typescript",
  "main": "dist/main.min.js",
  "scripts": {
    "build": "webpack -p",
    "build:watch": "webpack --watch",
    "gqlToTs": "tsc -p src/lib/makeTypeDefs && node src/lib/makeTypeDefs/cli/gqlToTs.js",
    "test": "jest ",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test:watch": "npm test -- --watch",
    "codecov": "npm run build && jest && codecov",
    "start": "NODE_ENV=production node dist/main.js",
    "dev": "NODE_ENV=development concurrently \"npm run build:watch\" \"node-dev dist/main.js\"",
    "deploy": "now -e DB_USER -e DB_HOST -e DB_PORT -e DB_PASSWORD -e DB_DATABASE"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/datahub/datahub-api.git"
  },
  "keywords": [
    "apollo",
    "backend",
    "apollo-server",
    "typescript",
    "graphql",
    "graphiql",
    "express"
  ],
  "author": "epicallan.al@gmail.com",
  "bugs": {
    "url": "https://github.com/devinit/datahub/issues"
  },
  "homepage": "https://github.com/devinit/datahub-api#readme",
  "peerDependencies": {
    "@gql2ts/types": "next",
    "graphql": "^0.10.1",
    "graphql-tag": "^2.2.1"
  },
  "dependencies": {
    "body-parser": "^1.17.1",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "csvtojson": "^1.1.6",
    "express": "^4.15.2",
    "fs-extra": "^3.0.1",
    "glob-promise": "^3.1.0",
    "graphql": "^0.10.1",
    "graphql-server-express": "^0.8.0",
    "graphql-tag": "^2.2.1",
    "graphql-tools": "^1.0.0",
    "helmet": "^3.6.0",
    "lru-cache": "^4.1.1",
    "merge-graphql-schemas": "^0.0.22",
    "morgan": "^1.8.1",
    "pg-monitor": "^0.8.0",
    "pg-promise": "^6.3.5",
    "ramda": "^0.24.1"
  },
  "devDependencies": {
    "@gql2ts/from-schema": "^1.1.1",
    "@gql2ts/types": "next",
    "@playlyfe/gql": "^2.3.1",
    "@types/body-parser": "1.16.3",
    "@types/cors": "^2.8.1",
    "@types/express": "^4.0.35",
    "@types/fs-extra": "^3.0.3",
    "@types/graphql": "^0.9.1",
    "@types/helmet": "^0.0.35",
    "@types/jest": "^20.0.2",
    "@types/lru-cache": "^4.0.0",
    "@types/morgan": "^1.7.32",
    "@types/node": "7.0.28",
    "@types/ramda": "github:types/npm-ramda",
    "awesome-typescript-loader": "^3.1.3",
    "concurrently": "^3.4.0",
    "git-pre-hooks": "^1.2.0",
    "jest": "^20.0.1",
    "jest-cli": "^20.0.1",
    "node-dev": "^3.1.3",
    "pretty-format": "^20.0.3",
    "raw-loader": "^0.5.1",
    "ts-jest": "^20.0.6",
    "tslint": "^5.4.3",
    "typescript": "^2.4.1",
    "webpack": "^3.0.0",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testEnvironment": "node",
    "testRegex": ".*\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}

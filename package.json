{
  "name": "datahub-api",
  "version": "0.0.1",
  "description": "Apollo GraphQL server using webpack and typescript",
  "main": "dist/main.min.js",
  "now": {
    "name": "datahub-api",
    "type": "npm"
  },
  "scripts": {
    "build": "webpack -p",
    "build:watch": "webpack --watch",
    "gqlToTs": "tsc -p src/lib/makeTypeDefs && node src/lib/makeTypeDefs/cli/gqlToTs.js",
    "test": "jest",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test:watch": "npm test -- --watch",
    "codecov": "npm run build && jest -u && codecov",
    "start": "NODE_ENV=production node dist/main.js",
    "dev": "NODE_ENV=development concurrently \"npm run build:watch\" \"node-dev dist/main.js\"",
    "deploy": "now -e DB_USER -e DB_HOST -e DB_PORT -e DB_PASSWORD -e DB_DATABASE"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/datahub/datahub-api.git"
  },
  "keywords": [
    "apollo",
    "node",
    "backend",
    "graphql-server",
    "typescript",
    "graphql",
    "graphiql",
    "express"
  ],
  "author": "epicallan.al@gmail.com",
  "bugs": {
    "url": "https://github.com/devinit/datahub/issues"
  },
  "homepage": "https://github.com/devinit/datahub-api#readme",
  "dependencies": {
    "apollo-server-express": "^1.1.2",
    "body-parser": "^1.18.1",
    "color": "^2.0.0",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "csvtojson": "^1.1.6",
    "d3": "^4.10.0",
    "express": "^4.15.2",
    "fs-extra": "^4.0.2",
    "glob-promise": "^3.1.0",
    "graphql-tools": "^1.0.0",
    "helmet": "^3.6.0",
    "lru-cache": "^4.1.1",
    "morgan": "^1.8.1",
    "pg-monitor": "^0.8.0",
    "pg-promise": "^6.7.1",
    "ramda": "^0.24.1",
    "shortid": "^2.2.8"
  },
  "devDependencies": {
    "@gql2ts/from-schema": "^1.1.1",
    "@gql2ts/types": "next",
    "@playlyfe/gql": "^2.3.1",
    "@types/body-parser": "1.16.3",
    "@types/color": "^1.0.4",
    "@types/cors": "^2.8.1",
    "@types/express": "^4.0.35",
    "@types/fs-extra": "^3.0.3",
    "@types/graphql": "^0.9.1",
    "@types/helmet": "^0.0.35",
    "@types/jest": "^20.0.2",
    "@types/lru-cache": "^4.1.0",
    "@types/morgan": "^1.7.32",
    "@types/node": "7.0.28",
    "@types/ramda": "^0.24.7",
    "@types/shortid": "0.0.29",
    "awesome-typescript-loader": "^3.1.3",
    "concurrently": "^3.4.0",
    "git-pre-hooks": "^1.2.0",
    "jest": "^21.1.0",
    "jest-cli": "^21.1.0",
    "merge-graphql-schemas": "^1.1.4",
    "node-dev": "^3.1.3",
    "pretty-format": "^21.1.0",
    "raw-loader": "^0.5.1",
    "ts-jest": "^21.0.1",
    "tslint": "^5.4.3",
    "typescript": "^2.5.2",
    "webpack": "^3.6.0",
    "webpack-node-externals": "^1.6.0"
  },
  "git-pre-hooks": {
    "pre-push": [
      "npm run lint",
      "npm run build"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testEnvironment": "node",
    "testRegex": ".*\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}

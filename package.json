{
  "name": "datahub-api",
  "version": "1.0.0",
  "description": "Apollo GraphQL server using webpack and typescript",
  "main": "dist/main.min.js",
  "now": {
    "name": "datahub-api",
    "type": "npm"
  },
  "scripts": {
    "build": "webpack -p",
    "build:watch": "webpack --watch",
    "gqlToTs": "tsc -p src/lib/makeTypeDefs && node src/lib/makeTypeDefs/cli/gqlToTs.js",
    "test": "jest ",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test:watch": "npm test -- --watch",
    "codecov": "npm run build && jest -u && codecov",
    "start": "NODE_ENV=production node dist/main.js",
    "dev": "NODE_ENV=development concurrently \"npm run build:watch\" \"node-dev dist/main.js\"",
    "deploy": "now -e DB_USER -e DB_HOST -e DB_PORT -e DB_PASSWORD -e DB_DATABASE"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/datahub/datahub-api.git"
  },
  "keywords": [
    "apollo",
    "node",
    "backend",
    "graphql-server",
    "typescript",
    "graphql",
    "graphiql",
    "express"
  ],
  "author": "epicallan.al@gmail.com",
  "bugs": {
    "url": "https://github.com/devinit/datahub/issues"
  },
  "homepage": "https://github.com/devinit/datahub-api#readme",
  "dependencies": {
    "@devinit/graphql-next": "0.0.14",
    "@devinit/pdf-base": "1.0.4",
    "graphql": "0.9.0",
    "color": "^2.0.1",
    "d3-color": "^1.0.3",
    "d3-interpolate": "^1.1.6",
    "d3-scale": "^1.0.7",
    "ramda": "^0.25.0",
    "shortid": "^2.2.8"
  },
  "devDependencies": {
    "@types/color": "^2.0.0",
    "@types/jest": "^22.0.1",
    "@types/lru-cache": "^4.1.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "9.3.0",
    "@types/ramda": "^0.25.13",
    "@types/shortid": "0.0.29",
    "concurrently": "3.5.1",
    "jest": "22.1.4",
    "jest-cli": "22.1.4",
    "node-dev": "3.1.3",
    "pretty-format": "22.1.0",
    "ts-jest": "22.0.1",
    "tslint": "5.9.1",
    "git-pre-hooks": "^1.2.0",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "testEnvironment": "node",
    "testRegex": ".*\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  },
  "git-pre-hooks": {
    "pre-push": [
      "npm run lint",
      "npm run build"
    ]
  }
}
